<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:background="#9DD6CF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9DD6CF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informations"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:id="@+id/tt"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tt"
            android:id="@+id/card"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Utilisateur"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#696767"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/tv1"
                    android:id="@+id/tvUsername"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Addresse"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tvUsername"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#696767"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/tv2"
                    android:id="@+id/tvAddress"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Téléphone"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tvAddress"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#696767"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/tv3"
                    android:id="@+id/tvPhone"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Déclaration"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tvPhone"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv4"/>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv4">
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="vertical"
                                android:textSize="16sp"
                                android:id="@+id/tvDeclaration"/>

                        </RelativeLayout>

                    </androidx.core.widget.NestedScrollView>

                </RelativeLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Confirmer la présence   "
            android:background="#58C3CB"
            android:layout_below="@+id/card"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btn"
            android:textColor="#fff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>